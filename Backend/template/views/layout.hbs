<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Result Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="../../public/css/navbar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


  <style>
    /* Set background color for the whole page */
    body {
      background-color: #f8f9fa; /* Light gray */
      margin: 0;
      padding: 0;
    }

    /* Customize table appearance */
    .table th, .table td {
      vertical-align: middle;
    }
    /* Customize action buttons */
    .action-btns {
      display: flex;
      align-items: center;
    }
    .action-btn {
      font-size: 20px;
      margin-right: 10px;
      transition: transform 0.2s;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: none;
      cursor: pointer;
    }
    .action-btn:hover {
      transform: scale(1.2);
    }
    .btn-edit {
      background-color: #17a2b8;
      color: white;
    }
    .btn-delete {
      background-color: #dc3545;
      color: white;
    }
    .container {
      max-width: 800px;
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
      margin-top: 30px;
    }
    .table {
      border-collapse: separate;
      border-spacing: 0 10px;
      background-color: #f8f9fa;
      border-radius: 10px;
      overflow: hidden;
    }
    .table thead th {
      background-color: transparent;
      border-bottom: none;
      font-weight: 600;
    }
    .table tbody td {
      background-color: white;
      border: none;
    }
    .table-title {
      text-align: center;
      margin-bottom: 30px;
      font-size: 24px;
      color: #333;
    }
    .table-responsive {
      overflow-x: auto;
    }
     .welcome-message {
            display: none;
            text-align: center;
            font-size: 24px;
            margin-top: 50px;
            color: #333;
        }
  </style>
</head>
<body>
   
    {{>headers}}
    {{#if message}}
        <div class="alert alert-{{message.type}} alert-dismissible fade show" role="alert">
            <strong>{{message.message}}</strong>
        </div>
    {{/if}}

    <div class="wrapper">
      <div class="content">
          <div id="listOfStudents">
              {{>listOfStudents}}
          </div>
              <div id="welcomeMessage" class="welcome-message">
              Welcome to our Result Management System!
              <img src="../../public/images/my-header-img.png" alt="Header Image">
          </div>
      </div>
      <div class="footer">
            {{>footer}}
      </div>
    </div>



  <script>
    function getCookie(name){
        const value=";"+document.cookie;
        const parts=value.split(";"+name+"=");
        if(parts.length===2)
            return parts.pop().split(";").shift();
    }
    const token=getCookie('token');
    console.log(token);
    if(token){
        document.getElementById('listOfStudents').style.display='block';
        document.getElementById('lstt').style.display='none';
        document.getElementById('lsts').style.display='none';
        document.getElementById('lst').style.display='block';
        document.getElementById('addStudent').style.display='block';
         document.getElementById('welcomeMessage').style.display='none';
    }
    else{
           document.getElementById('listOfStudents').style.display='none';
           document.getElementById('lst').style.display='none';
           document.getElementById('lstt').style.display='block';
           document.getElementById('lsts').style.display='block';
           document.getElementById('addStudent').style.display='none';
           document.getElementById('welcomeMessage').style.display='block';
    }

  </script>
</body>
</html>